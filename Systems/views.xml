<PropertyList>

  <chase-distance-m type="double" archive="y"> -70 </chase-distance-m>

  <view n="100">
    <name>Co pilote</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <pitch-offset-deg>-8</pitch-offset-deg>
      <x-offset-m archive="y">   0.412 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -1.30 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -17.65 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg> 75 </default-field-of-view-deg>
    </config>
  </view>
  
  <view n="101">
    <name>Engineer</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.75 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -1.68 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -16.55 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> 1 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 85 </default-field-of-view-deg>
      <heading-offset-deg type="double">180 </heading-offset-deg>
    </config>
  </view>

  <view n="102">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">  0 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  8 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 21 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 40 </default-field-of-view-deg>
    </config>
  </view>

  <view n="103">
    <name>Cabine Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y">   0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y">  -1.300 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> -17.000 </z-offset-m> <!--Back-->
      <pitch-offset-deg> 0 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 50 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  -0.70 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  -1.29 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -17.62 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg> 85 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

  <view n="7">
    <config>
      <target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
    </config>
  </view>

</PropertyList>

