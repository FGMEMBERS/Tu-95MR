<PropertyList>

  <fx>

  <!-- Engines 1 -4 starting up-->
    <crank>
      <name>engstart1</name>
      <path>Aircraft/Tu-95MR/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>1000</max-dist>
    </crank>
    
    <crank>
      <name>engstart2</name>
      <path>Aircraft/Tu-95MR/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart3</name>
      <path>Aircraft/Tu-95MR/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
    
    <crank>
      <name>engstart4</name>
      <path>Aircraft/Tu-95MR/Sounds/starter.wav</path>
       <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>      
      <volume>
        <offset>-0.45</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>1000</max-dist>
      <delay-sec>0</delay-sec>
    </crank>
  
  <!-- Engines 1 -4 running -->
  
    <engine>
      <name>engine0</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/Tupolev-Tu-95MR-2-links.wav</path>
      <condition>       
         <property>sim/multiplay/generic/int[12]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.00133</factor>
        <min>0.10</min>
        <max>1.0</max>        
      </volume>
      <pitch>
        <property>/engines/engine[0]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>

    
    <!-- Moteur 2 -->
    <engine>
      <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/Tupolev-Tu-95MR-2-links.wav</path>
      <condition>       
         <property>sim/multiplay/generic/int[13]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.00133</factor>
        <min>0.10</min>
        <max>1.0</max>       
      </volume>
      <pitch>
        <property>/engines/engine[1]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>

    

    <!-- Moteur 3 -->
    <engine>
      <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/Tupolev-Tu-95MR-2-rechts.wav</path>
      <condition>       
         <property>sim/multiplay/generic/int[14]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.00133</factor>
        <min>0.10</min>
        <max>1.0</max>        
      </volume>
      <pitch>
        <property>/engines/engine[2]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>

    

    <!-- Moteur 4 -->
    <engine>
      <name>engine3</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/Tupolev-Tu-95MR-2-rechts.wav</path>
      <condition>       
         <property>sim/multiplay/generic/int[15]</property>         
        </condition>  
      <volume>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.00133</factor>
        <min>0.10</min>
        <max>1.0</max>       
      </volume>
      <pitch>
        <property>/engines/engine[3]/rpm</property>
        <factor>0.0004</factor>
        <min>0.0</min>
        <max>0.2</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>10000</max-dist>
      <delay-sec>17</delay-sec>
    </engine>

     <!-- Rumble on runway -->

    <rumble>
      <name>rumble1</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/24roll.wav</path>
      <condition>
          <property>/gear/gear[0]/wow</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[12]</property>
        <type>log</type>
        <factor>0.15</factor>
	<min>0.0</min>
        <max>0.2</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </rumble>
    
    <rumble>
      <name>rumble2</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/24roll.wav</path>
      <condition>
        <or>          
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>sim/multiplay/generic/float[12]</property>
        <type>log</type>
        <factor>0.15</factor>
	<min>0.0</min>
        <max>0.2</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>2000</max-dist>
    </rumble>

    <!-- Gear in and out -->
    
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/Tu-95MR/Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <volume>        
        <max>0.55</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Aircraft/Tu-95MR/Sounds/gear-lck.wav</path>
     <condition>
       <greater-than>
         <property>/gear/gear[0]/position-norm</property>
         <value>0.96</value>
       </greater-than>
     </condition>
     <volume>        
        <max>0.55</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <!-- Touchdown -->
    
    <squeal>
      <name>squeal1</name>
      <mode>once</mode>
      <path>Aircraft/Tu-95MR/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[0]/wow</property>                 
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>
    
    <squeal>
      <name>squeal2</name>
      <mode>once</mode>
      <path>Aircraft/Tu-95MR/Sounds/squeal.wav</path>
      <condition>        
          <property>/gear/gear[2]/wow</property>          
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
	<min>0.7</min>
        <max>1.0</max>
      </volume>      
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>0.5</offset>
	<min>0.9</min>
        <max>1.0</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>
 
 <!-- Flaps -->
 
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/Tu-95MR/Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.25</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </flap>
    

     <!-- Speed Warning -->
 
    <speedwarn>
      <name>warn1</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/dinamik_pr2.wav</path>
       <condition>
        <greater-than>
	 <property>instrumentation/airspeed-indicator/true-speed-kt</property>
	 <value>510</value>
         </greater-than>
        </condition> 
      <volume>
	<offset>1.0</offset>
	<min>1.0</min>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </speedwarn>

        <!-- Decision Height Warning -->
 
    <decision>
      <name>decision</name>
      <mode>once</mode>
      <path>Aircraft/Tu-95MR/Sounds/omi_1.wav</path>
      <condition>
    <less-than>
      <property>position/altitude-agl-ft</property>
      <property>instrumentation/altimeter/decision-height</property>      
    </less-than>
  </condition>
      <volume>
	<min>1.0</min>
        <max>1.0</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </decision>
  

        <!-- Wind -->

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/wind.wav</path>
      <property>/environment/wind-speed-kt</property>
      <volume>
        <property>/environment/wind-speed-kt</property>
        <factor>0.0025</factor>
        <min>0.00</min>
        <max>0.20</max>
      </volume>
      <pitch>
        <property>/environment/wind-speed-kt</property>
        <factor>0.01</factor>
        <offset>0.2</offset>
        <max>0.70</max>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </wind>
    
    <!-- Rain -->
    
    <rain>
      <name>rain</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/rain_canopy.wav</path>
      <condition>
        <greater-than>
          <property>/environment/metar/rain-norm</property>
          <value>0.2</value>
        </greater-than>
      </condition>
      <volume>
        <property>/environment/metar/rain-norm</property>
        <factor>1.00</factor>
        <offset>-0.2</offset>
        <min>0.0</min>
        <max>0.6</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <offset>0.50</offset>
      </pitch>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </rain>
    
 
  <!-- Stall -->
 
 <stall>
   <name>stall</name>
   <mode>looped</mode>
   <path>Aircraft/Tu-95MR/Sounds/stall.wav</path>
   <condition>
     <and>
       <property>instrumentation/alerts/stall</property>
       <greater-than>
	 <property>sim/time/elapsed-sec</property>
	 <value>100</value>
       </greater-than>
     </and>
   </condition>    
   <volume>
     <property>instrumentation/alerts/stall</property>
     <max>1.0</max>
   </volume>
   <reference-dist>10</reference-dist>
   <max-dist>100</max-dist>
 </stall>
    
    
            <!-- Gear Warning -->
 
    <decision>
      <name>gearwarning</name>
      <mode>looped</mode>
      <path>Aircraft/Tu-95MR/Sounds/sirena.wav</path>
      <condition>    
      <property>/gear/warning</property>
      </condition>
      <volume>
        <min>0.8</min>
        <max>0.8</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>100</max-dist>
    </decision>
 
  </fx>
 
</PropertyList>
